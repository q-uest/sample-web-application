pipeline {
    agent any
    environment {
        BUILD_COMPLETE = false
        STATUS_CODE=0
    }
    stages {
        stage('Build') {
            failFast true
            parallel {
                stage('Building') {
                 when { environment name: 'BUILD_COMPLETE', value: 'false' }
                    steps {
                        
                        sh "mvn clean install  |  tee output.log"

                        sh '! grep "WARNING" output.log'

                        script {
                            BUILD_COMPLETE = true
                        }
                    }
                }
                stage('Monitoring the logs!!') {
                when { 
                environment name: 'BUILD_COMPLETE', value: 'false'
                environment name: 'STATUS_CODE', value: '0'
                
                }
                     steps {
                        script {
                            while (STATUS_CODE == 0) {
                                def STATUS_CODE = sh script:'! grep "WARNING" output.log', returnStatus:true
                                                                
                            }
                        }
                    }
                }
            }
        }
    }
}
