pipeline {
    agent any
    environment {
        BUILD_COMPLETE=false
        STATUS_CODE=1
    }
    stages {
        stage('Build') {
            failFast true
            parallel {
                stage('Building') {
                when { environment name: 'BUILD_COMPLETE', value: 'false' }
                    steps {
                        
                        sh "mvn clean install  |  tee output.log"

                        sh '! grep "WARNING" output.log'

                        script {
                            BUILD_COMPLETE = true
                        }
                    }
                }
                stage('Monitoring the logs!!') {
                        steps {
                        script {
                            echo "This is Monitoring stage!!"
                            echo "The value of BUILD_COMPLETE ${BUILD_COMPLETE}, STATUS_CODE=${STATUS_CODE}"
                            while ( STATUS_CODE!=0 ) 
                            {
                                echo "This is inside MONITORING stage!"
                                def STATUS_CODE = sh script:'! grep  "WARNING" output.log', returnStatus:true
                                                                
                            }
                            echo "The Monitoring Loop ends here...Bye.....!"
                        }
                    }
                }
            }
        }
    }
}
