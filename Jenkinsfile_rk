pipeline 
{
    agent any
    environment {
        BUILD_COMPLETE=false
        STATUS_CODE=1
    }
    stages {
        
        stage('Build') {
            failFast true
            parallel 
            {
                stage('Building') {
                    steps 
                    {
                        
                        sh "mvn clean install  |  tee output.log"

                        sh '! grep "WARNING" output.log'

                        script 
                        {
                            BUILD_COMPLETE = true
                        }
                    }
                }
            
                stage('Monitoring the logs!!') 
                {
                        steps 
                        {
                            echo "This is monitoring Logs !!"
                                                        
                        script
                        {    
                            echo "STATUS_CODE=${STATUS_CODE}"
                            while ( STATUS_CODE != 0 ) 
                            {
                                
                                echo "this is inside Monitoring logs...."
                                
                                STATUS_CODE=sh( 
                                    script: "if [ -s output.log ]; then ! grep  'WARNING' output.log ; fi" ,
                                      returnStatus: true)
                                
                                echo " Still in While Loop.......STATUS_CODE=${STATUS_CODE}"
                                                              
                                
                            }
                                echo "STATUS_CODE=${STATUS_CODE}"
                                if (STATUS_CODE==1)
                                {   
                                    sh 'exit 1'
                                }
                        }
                                                        
                        }
                    }
                }
            }
        }
}
