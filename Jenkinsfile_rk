pipeline 
{
    agent any
    environment 
    {
        BUILD_COMPLETE=false
        STATUS_CODE=0
        EXT_STATUS=1
    }
    stages
    {
     stage('Build') {
            failFast true
            parallel {
                stage('Building') {
                    steps {
                        echo "inside building"
                        sh "mvn clean install  |  tee output.log"

                        sh '! grep "WARNING" output.log'

                        script {
                            BUILD_COMPLETE = true
                        }
                    }
                }
            
                stage('Monitoring the logs!!') 
                {
                        steps {
                        script {
                            
                            while ( STATUS_CODE != 888 ) 
                            {
                                sh 'cat output.log  |grep  "WARNING" '
                                sh 'EXT_STATUS=$?'
                                echo "EXT_STATUS=EXT_STATUS"
                                STATUS_CODE = sh 'if [ $EXT_STATUS -eq 0 ]; then exit 999; fi;'
                                echo "Build has failed...Exiting the pipeline.....!!"
                            }
                                                        
                        }
                    }
                }
            }
            
        }
    }
}
